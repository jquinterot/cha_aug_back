# Application Configuration
PORT=8000
MODEL_TYPE=local  # 'local' for LM Studio or 'openai' for OpenAI API

# OpenAI Configuration (required if MODEL_TYPE=openai)
OPENAI_API_KEY=your_openai_api_key_here

# LM Studio Configuration (required if MODEL_TYPE=local)
LM_STUDIO_URL=http://host.docker.internal:1234  # Update port if running LM Studio on a different port

# MongoDB Configuration
MONGODB_URL=mongodb://mongo:27017/rag_chat

# RAG Configuration
RAG_SIMILARITY_THRESHOLD=0.7  # Adjust based on your needs
RAG_MAX_RESULTS=5  # Maximum number of results to return from vector store

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# CORS (if your frontend is on a different domain)
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173
